# Database Configuration
# MySQL format: mysql+mysqlconnector://user:password@host:port/database
# PostgreSQL format: postgresql://user:password@host:port/database
DATABASE_URL=mysql+mysqlconnector://root:password@localhost:3306/forum_crawler

# Telegram Notifications (optional)
# Get bot token from @BotFather on Telegram
# Get chat ID by messaging @userinfobot or @RawDataBot
TELEGRAM_BOT_TOKEN=8365899191:AAGzdIYrU06bnBUh2ObOVLVYWGCxWlWJeQc
TELEGRAM_CHAT_ID=-1003542178355

# Only send notifications when matches are found (suppress no-match notifications)
# Set to 'true' to only get notified about matches, 'false' to get all crawl results
NOTIFY_ONLY_ON_MATCHES=false

# PostgreSQL (alternative):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/forum_crawler

# Crawler Configuration (optional)
# RATE_LIMIT=2.0

# LCB.org Extraction Mode
# 'comprehensive' (default): Extract all thread links including sidebar/widgets (slower, more thorough)
# 'targeted': Extract only main thread list (faster, less coverage)
LCB_EXTRACTION_MODE=comprehensive

# Playwright Headless Mode
# Set to 'false' to see browser window during scraping (useful for debugging)
# Set to 'true' for headless mode (default, recommended for automation)
PLAYWRIGHT_HEADLESS=true

# Schedule Configuration
# How often to run the scraper (in hours)
# Options: 1, 2, 3, 4, 6, 8, 12, 24
# Default: 24 (once per day at midnight)
SCHEDULE_INTERVAL=24

# Specific time to run (24-hour format, e.g., 02:00 for 2 AM)
# Leave empty to run at midnight
SCHEDULE_TIME=00:00
